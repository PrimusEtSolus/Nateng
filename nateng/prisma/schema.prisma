// SQLite schema for local development. Run `npx prisma migrate dev --name init` to create the DB
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// Use a plain string for role to avoid enum compatibility issues with this connector

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String   // Hashed password
  role      String
  minimumOrderKg Int? // Minimum order quantity in kg (for farmers: 50 or 100)
  profilePhotoUrl String? // URL to profile photo
  isBanned  Boolean  @default(false) // User ban status
  bannedAt  DateTime? // When user was banned
  banReason String?  // Reason for banning
  createdAt DateTime @default(now())
  // relations
  products  Product[] @relation("FarmerProducts")
  listings  Listing[] @relation("SellerListings")
  ordersAsBuyer Order[] @relation("BuyerOrders")
  ordersAsSeller Order[] @relation("SellerOrders")
  messagesSent Message[] @relation("SenderMessages")
  messagesReceived Message[] @relation("ReceiverMessages")
  notifications Notification[]
  analyticsEvents AnalyticsEvent[]
  favorites      Favorite[]
  appeals        Appeal[]
  auditLogs      AuditLog[]
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  imageUrl    String?
  farmerId    Int
  farmer      User     @relation(fields: [farmerId], references: [id], name: "FarmerProducts")
  createdAt   DateTime @default(now())
  listings    Listing[]
}

model Listing {
  id         Int      @id @default(autoincrement())
  productId  Int
  product    Product  @relation(fields: [productId], references: [id])
  sellerId   Int
  seller     User     @relation(fields: [sellerId], references: [id], name: "SellerListings")
  priceCents Int
  quantity   Int      @default(0)
  available  Boolean  @default(true)
  createdAt  DateTime @default(now())
  orderItems OrderItem[]
  favorites  Favorite[]
}

model Order {
  id             Int       @id @default(autoincrement())
  buyerId        Int
  buyer          User      @relation(fields: [buyerId], references: [id], name: "BuyerOrders")
  sellerId       Int
  seller         User      @relation(fields: [sellerId], references: [id], name: "SellerOrders")
  totalCents     Int
  status         String    @default("PENDING")
  createdAt      DateTime  @default(now())
  items          OrderItem[]
  // Delivery scheduling fields for truck ban compliance
  scheduledDate  DateTime? // Scheduled delivery date
  scheduledTime  String?   // Scheduled delivery time (HH:mm format)
  route          String?   // Delivery route (e.g., "Kennon Road", "Quirino Highway")
  isCBD          Boolean?  @default(false) // Whether delivery is within Central Business District
  truckWeightKg  Int?      // Gross weight capacity of truck in kg (4500+ triggers ban)
  deliveryAddress String?  // Delivery address
  isExempt       Boolean?  @default(false) // Whether vehicle is exempt from truck ban
  exemptionType  String?  // Type of exemption (e.g., "water_delivery", "government", "emergency")
}

model OrderItem {
  id        Int     @id @default(autoincrement())
  orderId   Int
  order     Order   @relation(fields: [orderId], references: [id])
  listingId Int
  listing   Listing @relation(fields: [listingId], references: [id])
  quantity  Int
  priceCents Int
}

model Message {
  id        Int      @id @default(autoincrement())
  senderId  Int
  sender    User     @relation(fields: [senderId], references: [id], name: "SenderMessages")
  receiverId Int
  receiver  User     @relation(fields: [receiverId], references: [id], name: "ReceiverMessages")
  orderId   Int?     // Optional: message related to an order
  content   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  type      String   // "order_placed", "order_confirmed", "order_shipped", "order_delivered", "message"
  title     String
  message   String
  link      String?  // Optional link to related page
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

// Analytics models
model AnalyticsEvent {
  id        Int      @id @default(autoincrement())
  eventType String   // "page_view", "product_view", "add_to_cart", "order_placed", "search", etc.
  userId    Int?     // Optional - can track anonymous events too
  user      User?    @relation(fields: [userId], references: [id])
  sessionId String?  // For tracking user sessions
  metadata  String?  // JSON string for flexible metadata (SQLite doesn't support Json type)
  createdAt DateTime @default(now())
}

model DailyStats {
  id            Int      @id @default(autoincrement())
  date          DateTime @unique
  totalUsers    Int      @default(0)
  activeUsers   Int      @default(0)
  totalOrders   Int      @default(0)
  totalRevenue  Int      @default(0) // in cents
  totalListings Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Favorite {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  listingId Int
  listing   Listing  @relation(fields: [listingId], references: [id])
  createdAt DateTime @default(now())
  
  @@unique([userId, listingId]) // Prevent duplicate favorites
}

model Appeal {
  id            Int      @id @default(autoincrement())
  userId        Int
  user          User     @relation(fields: [userId], references: [id])
  appealReason  String
  appealDetails String?
  status        String   @default("pending") // "pending", "approved", "rejected"
  submittedAt   DateTime @default(now())
  reviewedAt    DateTime?
  reviewedBy    String?  // Admin email who reviewed
  adminNotes    String?
  
  @@unique([userId, status]) // One pending appeal per user
}

model AuditLog {
  id          Int      @id @default(autoincrement())
  userId      Int?     // User being acted upon (can be null for system actions)
  user        User?    @relation(fields: [userId], references: [id])
  action      String   // "ban", "unban", "approve_appeal", "reject_appeal"
  actor       String   // Admin email who performed action
  reason      String?  // Reason for action
  metadata    String?  // JSON string for additional context
  createdAt   DateTime @default(now())
}
